<section class="food_section layout_padding-bottom">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          {{titre}}
        </h2>
      </div>

      <ul class="">
      {% if is_granted('ROLE_RESPONSABLE') %}
        <a href="{{path('AjouterPlat')}}" class="btn btn-danger" >Ajouter</a>
      {% endif %}
      </ul>

      <ul class="filters_menu">
        <li class="active" data-filter="*">All</li>
        <li data-filter=".Burger">Burger</li>
        <li data-filter=".Pizza">Pizza</li>
        <li data-filter=".Boisson">Boisson</li>
        <li data-filter=".Frittes">Frittes</li>
      </ul>

      <div class="filters-content">
        <div class="row grid">
        {% for plat in plats %}
        {% if plat.statut == statut %}
          <div class="col-sm-6 col-lg-4 all {{ plat.categorieplat.libelle }}">
            <div class="box">
              <div>
                <div class="img-box">
                  <img src="{{asset('images/PlatImages/')~ plat.image}}" alt="">
                </div>
                <div class="detail-box">
                  <h5>
                    {{ plat.libelle }}
                  </h5>
                  <p>
                    {{ plat.description }}
                  </p> 
                  <div class="options">
                    <h6>
                      {{plat.Prix}} FCFA
                    </h6>
                   
                    <a href="">
                      
                    </a>
                    
                  </div>
                  {% if is_granted('ROLE_RESPONSABLE') %}
                    <a href="{{path('app_plat_edit',{'id':plat.id})}}" class="btn btn-danger" >Modifier</a>
                    <a href="{{path('app_plat_show',{'id':plat.id})}}" class="btn btn-danger" >Show</a>
                      {% endif %}
                </div>
              </div>
            </div>
          </div>
          {% endif %}
        {% endfor %}
        </div>
      </div>
      
      <div class="btn-box">
        {% if is_granted('ROLE_RESPONSABLE') %}
        <a href="{{path('corbeille')}}">
          <i class="fa fa-trash" aria-hidden="true">
          </i>Corbeille
        </a>  
        {% endif %}
      </div>
    </div>
  </section>