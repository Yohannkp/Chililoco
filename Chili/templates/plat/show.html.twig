{% extends 'base.html.twig' %}
{% block class %} sub_page {% endblock %}
{% block title %}Plat{% endblock %}

{% block ListMenu %}
    <section class="book_section layout_padding">
        <div class="col-md-6">
            <div class="container">
                <div class="heading_container">
                    <h2>Informations sur un plat</h2>
                </div>
            <div class="form_container">

   <table class="table table-dark">
        <tbody>
            
            <tr>
                <th>Libelle</th>
                <td>{{ plat.libelle }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ plat.image }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ plat.Prix }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ categorie.libelle }}</td>
            </tr>
        </tbody>
    </table>

</div>
</div>
</div>
</section>

   
    <a href="{{ path('Menu') }}">back to list</a>

    <a href="{{ path('app_plat_edit', {'id': plat.id}) }}">edit</a>

    {% if plat.statut == false %}
    <a href="{{path('app_plat_restauration', {'id': plat.id})}}" class="btn btn-primary">Restaurer</a>
    {% endif %}

    {% if plat.statut == true %}
    {{ include('plat/_delete_form.html.twig') }}
    {% endif %}
    
{% endblock %}
